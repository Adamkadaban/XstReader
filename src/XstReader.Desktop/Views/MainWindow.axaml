<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:XstReader.Desktop.ViewModels"
        xmlns:md="clr-namespace:Markdown.Avalonia;assembly=Markdown.Avalonia"
        x:Class="XstReader.Desktop.Views.MainWindow"
        Title="XstReader Desktop"
        Width="900"
        Height="600"
        mc:Ignorable="d">
    <Window.DataContext>
        <vm:MainWindowViewModel />
    </Window.DataContext>

    <Grid RowDefinitions="Auto,Auto,*,Auto" ColumnDefinitions="Auto,*" Margin="16">
        <TextBlock Text="PST File" VerticalAlignment="Center" />

        <DockPanel Grid.Column="1">
            <Button Content="Browse…"
                    Margin="8,0,0,0"
                    DockPanel.Dock="Right"
                    Click="OnBrowseClick" />
            <TextBox Text="{Binding PstPath, Mode=TwoWay}"
                     Watermark="Select a .pst or .ost file"
                     MinWidth="420" />
        </DockPanel>

        <TextBlock Grid.Row="1" Text="Password" VerticalAlignment="Center" />

        <DockPanel Grid.Row="1" Grid.Column="1">
            <Button Content="Open"
                    Margin="8,0,0,0"
                    DockPanel.Dock="Right"
                    Click="OnOpenClick" />
            <TextBox Text="{Binding Password, Mode=TwoWay}"
                     Watermark="Leave blank if not required"
                     PasswordChar="•" />
        </DockPanel>

        <Border Grid.Row="2" Grid.ColumnSpan="2" BorderThickness="1" Padding="8" CornerRadius="4">
            <Border.BorderBrush>
                <SolidColorBrush Color="#FFD0D5DD" />
            </Border.BorderBrush>
            <Grid ColumnDefinitions="2*,3*" RowDefinitions="*,Auto,*">
                <ListBox ItemsSource="{Binding FolderEntries}"
                         SelectedItem="{Binding SelectedFolder}" Margin="0,0,8,0">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid ColumnDefinitions="Auto,*" Margin="0,4">
                                <Border Width="{Binding IndentWidth}" />
                                <StackPanel Grid.Column="1" Orientation="Vertical">
                                    <TextBlock Text="{Binding Display}" />
                                    <TextBlock Text="{Binding Path}"
                                               FontSize="12"
                                               Foreground="#FF4A6FA5" />
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <ListBox Grid.Column="1"
                         ItemsSource="{Binding Messages}"
                         SelectedItem="{Binding SelectedMessage}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="0,4">
                                <TextBlock Text="{Binding Subject}" FontWeight="Bold" />
                                <TextBlock Text="{Binding Sender}" FontSize="12" />
                                <TextBlock Text="{Binding Received, StringFormat='{}{0:G}'}" FontSize="12" Foreground="#FF667788" />
                                <TextBlock Text="{Binding Preview}" TextWrapping="Wrap" FontSize="12" Foreground="#FF55606D" />
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <ScrollViewer Grid.Row="1" Grid.ColumnSpan="2" Margin="0,8,0,0" Height="120" VerticalScrollBarVisibility="Auto">
                    <TextBox Text="{Binding MessageHeaders}"
                             IsReadOnly="True"
                             BorderThickness="0"
                             Background="Transparent"
                             TextWrapping="Wrap"
                             FontFamily="Consolas, Menlo, monospace" />
                </ScrollViewer>

                <md:MarkdownScrollViewer Grid.Row="2"
                                          Grid.ColumnSpan="2"
                                          Margin="0,8,0,0"
                                          MinHeight="200"
                                          Markdown="{Binding MessageMarkdown}" />
            </Grid>
        </Border>

        <TextBlock Grid.Row="3"
                   Grid.ColumnSpan="2"
                   Text="{Binding StatusMessage}"
                   Foreground="#FF55606D" />
    </Grid>
</Window>
